<% provide(:title, 'New issue') %>
<h1>New issue</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @issue, url: {action: "create"} do |f| %>
      
      <%= render 'error_messages' %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create test", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>