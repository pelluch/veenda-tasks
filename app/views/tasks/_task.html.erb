<% if task.owner %>
	<div class="row-fluid tasks">
  		<div class="span1"><%= gravatar_for task.owner, size: 52 %></div>
  		<div class="span9">
  			<div class="row-fluid">
  				<div class="span12 task_title"><%= task.title %></div>
  			</div>
  			<div class="row-fluid">
  				<div class="span12"><%= task.description %></div>
  			</div>
  		</div>
  		<div class="span2" id="task_info">
  		  	<div class="row-fluid" id="task_type">
  				<div class="span12"><%= task.task_type.name %></div>
  			</div>
  			<div class="row-fluid" id="task_priority">
  				<div class="span12">Priority: <%= task.priority %></div>
  			</div>
  			<div class="row-fluid" id="task_estimate">
  				<div class="span12">Estimate: <%= if task.estimate then task.estimate.label end %></div>
  			</div>
  		</div>
	</div>
<% end %>




